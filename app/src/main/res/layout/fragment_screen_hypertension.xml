<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.dev.bkk.ncd.hypertension.ScreenHypertensionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_screen_hypertension"
        android:id="@+id/tv_headerScreenHypertension"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:textSize="28sp"
        android:id="@+id/tv_BloodPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ควาดันโลหิต"
        android:layout_below="@+id/tv_headerScreenHypertension"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp" />
    <EditText
        android:id="@+id/etx_BloodPressureFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="มิลลิเมตรปรอท"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_slash"
        android:layout_toStartOf="@+id/tv_slash" />
    <TextView
        android:textSize="28sp"
        android:id="@+id/tv_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_alignBottom="@+id/etx_BloodPressureFront"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/etx_BloodPressureBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="มิลลิเมตรปรอท"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_slash"
        android:layout_toEndOf="@+id/tv_slash" />

    <Button
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ตกลง"
        android:id="@+id/btn_ok"
        android:layout_below="@+id/tv_slash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

</RelativeLayout>
