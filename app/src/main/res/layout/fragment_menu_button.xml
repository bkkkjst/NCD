<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="#E0E0E0"
    android:layout_weight="1" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_personal_information"
            style="@style/MainTextView"

            flatui:fl_theme="@array/orange"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"
            android:text="@string/personal_information"
            android:singleLine="false" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_screen_age_35_years_up"
            style="@style/MainTextView"

            flatui:fl_theme="@array/blossom"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"
            android:text="@string/screen_age_35_years_up"
            android:singleLine="false" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_screen_age_14_to_34_years"
            style="@style/MainTextView"

            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_theme="@array/sky"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"
            android:text="@string/screen_age_14_to_34_years"
            android:singleLine="false"/>


        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_behavior"
            style="@style/MainTextView"

            flatui:fl_theme="@array/sand"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"
            android:text="@string/tv_headerScreenHypertension"
            android:singleLine="false"/>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_result"
            style="@style/MainTextView"

            flatui:fl_theme="@array/candy"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"
            android:text="@string/result"
            android:singleLine="false"/>

    </LinearLayout>
</LinearLayout>